/* GEnel olarak tüm linklerin stillerini değiştirmek için kullnılır*/
a{
    color:green;
    text-decoration: none;
}

/* Sadece ziyaret edilmemiş linklerin stillerini değiştirmek için kullnılır*/
a:link{
    color: green;
    text-decoration: none;
}

/* Sadece ziyaret edilmiş linklerin stillerini değiştirmek için kullnılır*/
a:visited{
    color:rgb(47, 26, 141);
}

a:hover{
    background-color: aqua;
    text-decoration: underline;
}
/* fare ile uzerine gelindiginde still degisir */
.title:hover{
    color:red;
    cursor:crosshair;
}